#!/bin/bash
if [[ $EUID -ne 0 ]]; then
   echo "This script must be run as root" 
   exit 1
fi

if [[ "$(mount | grep '/dev/sda2 on / type btrfs')" == *"subvol=/ROOT)"* ]];then 
    if [ -n "$(yadm -Y /etc/yadm diff --name-only)" ]; then
        yadm -Y /etc/yadm diff
        if [ $(yadm -Y /etc/yadm diff --name-only | wc -l) -ge 2 ]; then
            echo -e "\nARQUIVOS MODIFICADOS:"
            for i in $(yadm -Y /etc/yadm diff --name-only); do
                echo -e "/$i";
            done
        else
            echo -e "\nARQUIVO MODIFICADO:\n/$(yadm -Y /etc/yadm diff --name-only)\n"
        fi
    else
        echo -e "\nNENHUM ARQUIVO MODIFICADO\n"
    fi
    if [ $(yadm status -Y /etc/yadm --porcelain | grep "^A" | cut -c 4- | wc -l) -ge 2 ]; then
        echo -e "\nARQUIVOS ADICIONADOS:"
        for i in $(yadm status -Y /etc/yadm --porcelain | grep "^A" | cut -c 4-); do
            echo -e "/$i";
        done
    elif [ $(yadm status -Y /etc/yadm --porcelain | grep "^A" | cut -c 4- | wc -l) -eq 1 ]; then
        echo -e "\nARQUIVO ADICIONADO:\n/$(yadm status -Y /etc/yadm --porcelain | grep "^A" | cut -c 4-)"
    else
        echo -e "\nNENHUM ARQUIVO ADICIONADO\n"
    fi

        
        


#     yadm -Y /etc/yadm commit -a -m "atualizando"
else
    echo -e "Você não está no subvolume ROOT. push não realizado"
fi
